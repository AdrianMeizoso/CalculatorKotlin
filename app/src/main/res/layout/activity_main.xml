<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:fitsSystemWindows="true"
   android:orientation="vertical"
   android:weightSum="10"
   tools:context=".MainActivity">

   <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@id/tableLayout"
      android:background="@drawable/back_result"
      android:orientation="vertical">

      <TextView
         android:id="@+id/currentOperation"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginEnd="16dp"
         android:layout_marginTop="16dp"
         android:gravity="end"
         android:textColor="@android:color/white"
         android:textSize="50sp" />

      <TextView
         android:id="@+id/tempResult"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginEnd="16dp"
         android:alpha="0.6"
         android:gravity="end"
         android:textColor="@android:color/white"
         android:textSize="35sp" />

   </LinearLayout>

   <TableLayout
      android:id="@+id/tableLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:background="@color/backButtons">

      <TableRow
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <Button
            android:id="@+id/acButton"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="25sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/numbers_ripple"
            android:text="AC"
            android:textColor="@color/operations" />

         <Button
            android:id="@+id/signButton"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="25sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/numbers_ripple"
            android:text="+/-"
            android:textColor="@color/operations" />

         <Button
            android:id="@+id/percButton"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="25sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/numbers_ripple"
            android:text="%"
            android:textColor="@color/operations" />

         <ImageButton
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="25sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/numbers_ripple"
            android:src="@drawable/ic_backspace_black_24dp"
            android:textColor="@android:color/white" />
      </TableRow>

      <TableRow
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/numbers_ripple"
            android:maxHeight="90dp"
            android:text="7"
            android:textColor="@color/numbers" />

         <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/numbers_ripple"
            android:maxHeight="90dp"
            android:text="8"
            android:textColor="@color/numbers" />

         <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/numbers_ripple"
            android:maxHeight="90dp"
            android:text="9"
            android:textColor="@color/numbers" />

         <Button
            android:id="@+id/divideButton"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/numbers_ripple"
            android:maxHeight="90dp"
            android:text="รท"
            android:textColor="@android:color/white" />
      </TableRow>

      <TableRow
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/numbers_ripple"
            android:maxHeight="90dp"
            android:text="4"
            android:textColor="@color/numbers" />

         <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/numbers_ripple"
            android:maxHeight="90dp"
            android:text="5"
            android:textColor="@color/numbers" />

         <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/numbers_ripple"
            android:maxHeight="90dp"
            android:text="6"
            android:textColor="@color/numbers" />

         <Button
            android:id="@+id/multButton"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/numbers_ripple"
            android:maxHeight="90dp"
            android:text="ร"
            android:textColor="@android:color/white" />
      </TableRow>

      <TableRow
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/numbers_ripple"
            android:maxHeight="90dp"
            android:text="1"
            android:textColor="@color/numbers" />

         <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/numbers_ripple"
            android:maxHeight="90dp"
            android:text="2"
            android:textColor="@color/numbers" />

         <Button
            android:id="@+id/buttton3"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/numbers_ripple"
            android:maxHeight="90dp"
            android:text="3"
            android:textColor="@color/numbers" />

         <Button
            android:id="@+id/subButton"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/numbers_ripple"
            android:maxHeight="90dp"
            android:text="-"
            android:textColor="@android:color/white" />
      </TableRow>

      <TableRow
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/numbers_ripple"
            android:maxHeight="90dp"
            android:text="0"
            android:textColor="@color/numbers" />

         <Button
            android:id="@+id/dotButton"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/numbers_ripple"
            android:maxHeight="90dp"
            android:text="."
            android:textColor="@color/numbers" />

         <Button
            android:id="@+id/resultButton"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/numbers_ripple"
            android:maxHeight="90dp"
            android:text="="
            android:textColor="@android:color/white" />

         <Button
            android:id="@+id/addButton"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/numbers_ripple"
            android:maxHeight="90dp"
            android:text="+"
            android:textColor="@android:color/white" />

      </TableRow>

   </TableLayout>

</RelativeLayout>